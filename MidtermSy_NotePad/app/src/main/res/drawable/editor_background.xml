<!-- res/drawable/editor_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景色 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/editor_background" />
        </shape>
    </item>

    <!-- 添加 subtle pattern -->
    <item android:top="-100dp"
        android:left="-100dp"
        android:right="-100dp"
        android:bottom="0dp">
        <bitmap
            android:src="@drawable/editor_background_image"
            android:alpha="0.05"
            android:tileMode="repeat" />
    </item>
</layer-list>
