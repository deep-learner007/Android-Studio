<!-- res/values/styles.xml -->
<resources>
    <!-- 更新主应用主题为 Material Design -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- 主色调 -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>

        <!-- 背景色 -->
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:colorBackground">@color/background_color</item>

        <!-- 文字颜色 -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <!-- 更新记事本编辑器的自定义样式 -->
    <style name="NoteEditorTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/editor_background</item>
        <item name="android:editTextStyle">@style/NoteEditorText</item>
    </style>

    <style name="NoteEditorText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/editor_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
